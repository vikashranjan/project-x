<launch>

 <!-- Cameras -->

  <include file="$(find realsense2_camera)/launch/rs_rgbd.launch">
    <arg name="camera" value="d435_1" />
     <arg name="serial_no"         default="826212070362"/>
  </include>

 <include file="$(find realsense2_camera)/launch/rs_rgbd.launch">
    <arg name="camera" value="d435_2" />
     <arg name="serial_no"         default="801312071064"/>
